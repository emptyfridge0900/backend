FROM node:20-alpine AS build
WORKDIR /book-client
COPY package.json ./
COPY package-lock.json ./
RUN npm ci --silent
COPY . ./
RUN npm run build  # Outputs to /book-client/dist for Vite

# Production stage
FROM nginx:stable-alpine
COPY --from=build /book-client/dist /usr/share/nginx/html  # Match Vite output
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
